<Page x:ConnectionId='1'
    x:Class="AppleAcres.TryAgainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:AppleAcres"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"                     >

    <Grid>
        <Grid.Background>
            <ImageBrush Stretch="UniformToFill" ImageSource="Assets/tryagain.png"/>
        </Grid.Background>
        <Grid HorizontalAlignment="Center" Margin="0" VerticalAlignment="Center">
            <TextBlock x:Name="table" FontFamily="/Assets/Equestria.ttf#Equestria" TextWrapping="Wrap" VerticalAlignment="Top" TextAlignment="Center" FontSize="32" Foreground="White" Canvas.ZIndex="2" IsHitTestVisible="False">
        		<Run Text=" "/>
        		<LineBreak/>
        		<Run Text="  "/>
            </TextBlock>

            <TextBlock x:Name="rateUs" FontFamily="/Assets/Equestria.ttf#Equestria" TextWrapping="Wrap" VerticalAlignment="Top" TextAlignment="Center" FontSize="40" Foreground="White" Canvas.ZIndex="2" IsHitTestVisible="False" Margin="257,220,52,0" Text="rate" Visibility="Collapsed"/>
            <Image x:ConnectionId='2' x:Name="rateStore" HorizontalAlignment="Center" Height="90" Margin="255,266,50,0" VerticalAlignment="Top" Width="90" Source="Assets/RateWINDOWSPHONESTORE.png"                           Visibility="Collapsed"/>
            <TextBlock x:Name="share" FontFamily="/Assets/Equestria.ttf#Equestria" TextWrapping="Wrap" VerticalAlignment="Top" TextAlignment="Center" FontSize="40" Foreground="White" Canvas.ZIndex="2" IsHitTestVisible="False" Margin="0,74,0,0" Text="share" Visibility="Collapsed"/>
            <Image x:ConnectionId='3' x:Name="shareFB" HorizontalAlignment="Center" Height="100" Margin="150,120,150,0" VerticalAlignment="Top" Width="100" Source="Assets/ShareFACEBOOK.png"                         Visibility="Collapsed"/>
            <Image x:ConnectionId='4' x:Name="shareTWITTER" HorizontalAlignment="Center" Height="97" Margin="45,120,255,0" VerticalAlignment="Top" Width="100" Source="Assets/ShareTWITTER.png"                              Visibility="Collapsed"/>
            <Image x:ConnectionId='5' x:Name="shareVK" HorizontalAlignment="Center" Height="100" Margin="255,120,45,0" VerticalAlignment="Top" Width="100" Source="Assets/ShareVK.png"                         Visibility="Collapsed"/>

            <Border x:Name="Restart" BorderThickness="7" HorizontalAlignment="Center" Height="131" Margin="0,225,0,0" VerticalAlignment="Top" Width="205" BorderBrush="White">
                <TextBlock x:Name="RestartTXT" FontFamily="/Assets/Equestria.ttf#Equestria" TextWrapping="Wrap" VerticalAlignment="Center" TextAlignment="Center" FontSize="48" Foreground="White" Canvas.ZIndex="2" IsHitTestVisible="False" Margin="0" Text="RESTART" HorizontalAlignment="Center"/>
            </Border>
            <Button x:ConnectionId='6' x:Name="RestartBTN" BorderThickness="7" HorizontalAlignment="Center" Height="131" Margin="0,225,0,0" VerticalAlignment="Top" Width="205" BorderBrush="White" Background="Transparent" Opacity="0"                         >
            </Button>

        </Grid>
        <MediaElement x:Name="theEnd" Source="Assets/tryagainauido.mp3" AutoPlay="False" AudioCategory="GameMedia" Visibility="Collapsed" Volume="1"/>
    </Grid>
</Page>

